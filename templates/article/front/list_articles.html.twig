<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>

    <header>

        <form action="">
            <input name="search" type="text">
            <button type="submit">Rechercher</button>
        </form>

    </header>

    <body>


        {% for article in articles %}
            <article>
                <h2 style="color: {{ article.category.color }};">{{ article.title }}</h2>
                <p>{{ article.category.title }}</p>
                {% if article.imageFileName %}

                    {#
                        je récupère le nom du fichier uploadé
                        pour cet article que je concatène avec le dossier
                        dans lequel il a été uploadé
                    #}

                    <img src="{{ asset('uploads/articles/' ~ article.imageFileName) }}" alt="">

                {% endif %}
            </article>
        {% endfor %}

    </body>

</body>
</html>
